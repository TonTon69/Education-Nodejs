html
    head
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge')
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        title Login
        link(href='https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap', rel='stylesheet')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css', rel='stylesheet', integrity='sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC', crossorigin='anonymous')
        link(rel='stylesheet', href='/css/app.css')
        link(rel="stylesheet", href="/vendor/eggy-js/css/eggy.css")
        link(rel="stylesheet", href="/vendor/eggy-js/css/progressbar.css")
        link(rel="stylesheet", href="/vendor/eggy-js/css/theme.css")
    body
        .container-fluid.background
            .row.align-items-center.justify-content-center.h-100
                .col-md-4.row-container
                    form(action='/login', method='POST')
                        .text-center
                            img.rounded-3(src='https://scontent.fdad1-1.fna.fbcdn.net/v/t1.6435-9/40527544_1454083628027564_5516095591391690752_n.jpg?_nc_cat=100&ccb=1-5&_nc_sid=09cbfe&_nc_ohc=V7g2U5hpB-wAX9jVZ7E&_nc_ht=scontent.fdad1-1.fna&oh=5bf5da07a163ad710df5db0e73475d71&oe=617BAB2F', alt='', width='44', height='44')
                            h3.fw-bold.mt-4.mb-5 Đăng nhập
                        .form-field
                            input.form-input(placeholder=' ', type='email', name='email', value=values ? values.email : '')
                            label.form-label Email
                        .form-field
                            input.form-input(placeholder=' ', type='password', name='password', value=values ? values.password : '')
                            label.form-label Mật khẩu
                        .form-check.d-flex.align-items-center.justify-content-between.fs-7
                            div
                                input#rememberMe.form-check-input.mt-0(type='checkbox')
                                label.form-check-label(for='rememberMe') Lưu đăng nhập
                            a.form-check-label.text-primary(href='/password/reset') Quên mật khẩu
                        .d-grid.mt-4
                            button.btn.btn-primary(type='submit')
                                | Đăng nhập
                        .text-center.mt-4
                            .fs-7
                                span Bạn chưa có tài khoản? 
                                a.text-primary(type='button', data-bs-toggle='modal', data-bs-target='#registerModal') Đăng ký
                                #registerModal.modal.fade(tabindex='-1', aria-labelledby='registerModalLabel', aria-hidden='true')
                                    .modal-dialog(style='transition: all 0.3s ease')
                                        .modal-content
                                            .modal-header
                                                h5#registerModalLabel.modal-title Bạn muốn đăng ký tài khoản?
                                                button.btn-close(type='button', data-bs-dismiss='modal', aria-label='Close')
                                            .modal-body.text-start.fs-6
                                                p Vui lòng liên hệ admin qua địa chỉ email: pc3@gmail.com
                                                p Hotline hỗ trợ: 0398412xxx
                                                p Cảm ơn!
                            hr
                            .fs-8.mt-2
                                a(href='/about') Giới thiệu về PC3
                                span.ms-1.me-1 |
                                a(href='/') PC3 trên Facebook
        if errors.length > 0
            - var msgError = errors
        else if success.length > 0
            - var msgSuccess = success
        script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js', integrity='sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM', crossorigin='anonymous')
        script(src="/vendor/eggy-js/js/eggy.js")
        script.
            // toast message
            let msgToastError = '#{msgError}';
            if(msgToastError != ''){
                Eggy({
                    title: 'Oops... Có gì đó không đúng',
                    message:  msgToastError,
                    type: 'warning',
                    duration: 5000,
                });
            }

            let msgToastSuccess = '#{msgSuccess}';
            if(msgToastSuccess != ''){
                Eggy({
                    title: 'Thành công',
                    message:  msgToastSuccess,
                    type: 'success',
                    duration: 5000,
                });
            }  
