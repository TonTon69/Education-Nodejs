extends ../layouts/admin
block content
    section.qa__browser
        .row
            .col-md-10.grid-margin.stretch-card.mx-auto
                .card
                    .card-body
                        .d-flex.align-items-center.justify-content-between
                            h4.card-title Duyệt câu hỏi
                            a.btn.btn-outline-warning.btn-icon-text(href='/qa/list') 
                                i.mdi.mdi-reload.btn-icon-prepend
                                | Quay lại
                        form.mt-4(action=`/qa/${qa[0]._id}/browser?_method=PUT`, method='POST')
                            .form-group.row
                                label.col-sm-3.text-dark Tiêu đề
                                .col-sm-9
                                    span= qa[0].title
                            .form-group.row
                                label.col-sm-3.text-dark Ảnh mô tả
                                .col-sm-9
                                    if qa[0].thumbnail !== ""
                                        img(src=qa[0].thumbnail width=100 height=100 style='object-fit: cover')
                                    else
                                        div Không có ảnh mô tả.
                            .form-group.row
                                label.col-sm-3.text-dark Nội dung
                                .col-sm-9
                                    div !{qa[0].content}
                            .form-group.row
                                label.col-sm-3.col-form-label.text-dark(for='topic') Chủ đề
                                .col-sm-9
                                    input#topic.form-control(type='text', placeholder='Nhập chủ đề tại đây...', name='topic', required)
                            a.btn.btn-light(href='/qa/list') Hủy bỏ
                            a.btn.btn-danger.ml-2.btn-delete-qa(data-id=qa[0]._id) Xóa
                            button.btn.btn-primary.ml-2(type='submit') Duyệt câu hỏi
                        form(name='form-delete-qa' method='post')
    script.
        $(document).ready(function () {
            const formDeleteQa = $("form[name='form-delete-qa']");
            $(".btn-delete-qa").click(function() {
                const qaID = $(this).attr("data-id");
                formDeleteQa.attr("action", "/qa/" + qaID + "/destroy?_method=DELETE");
                formDeleteQa.submit();
            })
        })
