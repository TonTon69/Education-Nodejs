tbody
    - var count = 0;
    each user in users
        - count++;
        tr
            td= count
            td
                img(src=`${user.avatar}`)
                span.ml-2=user.fullname
            td= user.role[0].description
            td= user.email
            td= user.phone
            td= moment(user.birthDay).format("DD-MM-YYYY") 
